<%= form_tag "/links/#{@link.slug}", method: :patch do %>
  <div>
    Slug:
    <input type="text" class="form" name="slug" value="<%= @link.slug %>">
  </div>
  <div>
    Target url:
    <input type="text" class="form" name="target_url" value="<%= @link.target_url %>"
  </div>
  <div>
    <input type="submit" class="form" value="Edit Link">
  </div>
<% end %>